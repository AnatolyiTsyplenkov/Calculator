<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumBtn">
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBtn" parent="NumBtn">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ResetBtn" parent="ActionBtn">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="InputText">
        <item name="paddingStart">@dimen/text_view_padding_start</item>
        <item name="paddingEnd">@dimen/text_view_padding_end</item>
        <item name="android:paddingTop">@dimen/text_view_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
</resources>